<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzl.mapper.PermissionMapper">
    <select id="getRights" resultType="com.hzl.entity.Permission">
        select id,name,level,path,parentId from sys_permission order by level LIMIT #{page},#{rows}
    </select>

    <select id="getRightsCount" resultType="int">
        select count(1) from sys_permission
    </select>

</mapper>