<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzl.mapper.RoleMapper">
    <resultMap id="RoleResultMap" type="com.hzl.entity.Role">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="role_name" property="role_name" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="create_time" property="create_time" jdbcType="BIGINT"/>
        <collection property="children" ofType="com.hzl.entity.Permission">
            <id column="id1" property="id" jdbcType="VARCHAR"/>
            <result column="name1" property="name" jdbcType="VARCHAR"/>
            <result column="path1" property="path" jdbcType="VARCHAR"/>
            <result column="checked1" property="checked" jdbcType="INTEGER"/>
            <collection property="children" ofType="com.hzl.entity.Permission">
                <id column="id2" property="id" jdbcType="VARCHAR"/>
                <result column="name2" property="name" jdbcType="VARCHAR"/>
                <result column="path2" property="path" jdbcType="VARCHAR"/>
                <result column="checked2" property="checked" jdbcType="INTEGER"/>
                <collection property="children" ofType="com.hzl.entity.Permission">
                    <id column="id3" property="id" jdbcType="VARCHAR"/>
                    <result column="name3" property="name" jdbcType="VARCHAR"/>
                    <result column="path3" property="path" jdbcType="VARCHAR"/>
                    <result column="checked3" property="checked" jdbcType="INTEGER"/>
                </collection>
            </collection>
        </collection>
    </resultMap>
    <select id="getRoles" resultMap="RoleResultMap">
        select r.id,r.role_name,r.description,r.create_time
		from sys_role r
		ORDER BY r.create_time
    </select>

    <insert id="addRole" parameterType="com.hzl.entity.Role">
        insert into sys_role(id,role_name,description,create_time) value
        (#{id},#{role_name},#{description},#{create_time})
    </insert>

    <select id="getRoleById" resultType="com.hzl.entity.Role">
        select * from sys_role where id = #{id}
    </select>

    <update id="updateRole">
        update sys_role set role_name = #{role_name},description = #{description},
        update_time = #{update_time} where id = #{id}
    </update>

    <delete id="delRoleById">
        delete from sys_role where id = #{id}
    </delete>

    <delete id="delRpById">
        delete from sys_role_permission where rid = #{id}
    </delete>

    <delete id="delRuById">
        delete from sys_role_user where uid = #{userId}
    </delete>

    <insert id="addRu">
        insert into sys_role_user(uid,rid) value (#{userId},#{roleId})
    </insert>

    <select id="getAllRoleName" resultType="com.hzl.entity.Role">
        select * from sys_role
    </select>

    <delete id="delRmById">
        delete from sys_role_menu where rid = #{id}
    </delete>
</mapper>